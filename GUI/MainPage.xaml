<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.MainPage"
             Title="Spreadsheet">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New" Clicked="FileMenuNew" />
            <MenuFlyoutItem Text="Open" Clicked="FileMenuOpenAsync" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ScrollView>
        <VerticalStackLayout x:Name="Entire" >

            <!-- A Place to put the currently selected cell "namd" and "value" -->
            <Border
            StrokeThickness="0"
            HeightRequest="40">
                <HorizontalStackLayout>
                    <Label Text="" WidthRequest="115" />
                    <Label x:Name="selectedCellValueLabel" Text="Value" WidthRequest="75" 
                           FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="End" />
                    <Label x:Name="selectedCellValue" Text="" WidthRequest="75" 
                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                    <Label Text="" WidthRequest="30" />
                    <Label x:Name="selectedCellContentsLabel" Text="Contents" WidthRequest="75" 
                           FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="End" />
                    <Label x:Name="selectedCellContents" Text="" WidthRequest="75" 
                           VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
                </HorizontalStackLayout>
            </Border>

            <!-- the column headers: A, B, C, ... -->
            
            <HorizontalStackLayout x:Name="TopLabels">
                <Label WidthRequest="40" />
                <Button WidthRequest="75" HeightRequest="40" Text="RESET" Clicked="ClearButtonClicked" />
            </HorizontalStackLayout>

            <!-- the Grid of Spreadsheet GUI Cells -->
            <ScrollView
                    x:Name="Table"
                    Orientation="Both"
                    HorizontalOptions="FillAndExpand"
                    HorizontalScrollBarVisibility="Always"
                    HeightRequest="500">
                <HorizontalStackLayout x:Name="Grid">
                    <Label WidthRequest="40" />
                    <VerticalStackLayout x:Name="LeftLabels"  />
                </HorizontalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
