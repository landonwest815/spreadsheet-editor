<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="New" Clicked="FileMenuNew" />
            <MenuFlyoutItem Text="Open" Clicked="FileMenuOpenAsync" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ScrollView>
        <VerticalStackLayout x:Name="Entire">

            <!-- A Place to put the currently selected cell "namd" and "value" -->
            <Border
            StrokeThickness="0"
            HeightRequest="40">
                <HorizontalStackLayout>
                    <Label x:Name="selectedCell" Text="Stuff could go here" WidthRequest="100"/>
                </HorizontalStackLayout>
            </Border>

            <!-- the column headers: A, B, C, ... -->
            
            <HorizontalStackLayout x:Name="TopLabels"/>

            <!-- the Grid of Spreadsheet GUI Cells -->
            <ScrollView
                    x:Name="Table"
                    Orientation="Both"
                    HorizontalOptions="FillAndExpand"
                    HorizontalScrollBarVisibility="Always"
                    HeightRequest="500">
                <HorizontalStackLayout x:Name="Grid">
                    <VerticalStackLayout x:Name="LeftLabels"  ></VerticalStackLayout>
                </HorizontalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
